<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <% if (env != 'production') { %><meta name="robots" content="noindex"><% } %>
    <title><% if (typeof pageTitle !== 'undefined') { %><%= pageTitle %><% } %></title>
    <% if (typeof rss !== 'undefined') { %><link rel="alternate" type="application/rss+xml" title="NYCG: <%= rss.title %>" href="/rss<%= rss.path %>" /><% } %>
    <% if (typeof bodyClass !== 'undefined') { %>
        <% if (bodyClass == 'home') { %>
            <link rel="alternate" type="application/rss+xml" title="NYCG: Recent Art" href="/rss/art" />
            <link rel="alternate" type="application/rss+xml" title="NYCG: Recently Joined Artists" href="/rss/artist" />
            <link rel="alternate" type="application/rss+xml" title="NYCG: Recently Joined Venues" href="/rss/venue" />
            <link rel="alternate" type="application/rss+xml" title="NYCG: Recent Events" href="/rss/event" />
            <link rel="alternate" type="application/rss+xml" title="NYCG: Recent Call to Artists Listings" href="/rss/call" />
        <% } %>
    <% } %>
    <link rel="stylesheet" href="/webfonts/ss-social-regular.css" />
    <link rel="stylesheet" href="/webfonts/ss-standard.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <!--[if lt IE 9]>
    <script src="/js/libs/html5/html5.js"></script>
    <link rel="stylesheet" type="text/css" media="screen" href="/css/ie.css"  />
    <![endif]-->
    <script type="text/javascript">
        var NYCG = { // gobal object
            infiniteScroll : <% if (typeof infiniteScroll !== 'undefined') { %><%- infiniteScroll %><% } else { %>{ status : false }<% } %>
        };
    </script>
    <% if (env != 'production') { %><script data-main="/js/main-dev" src="/js/libs/require/require.js"></script><% } else { %><script data-main="/js/main" src="/js/libs/require/require.js"></script><% } %>
</head>
<body class="<% if (typeof bodyClass !== 'undefined') { %><%= bodyClass %><% } %>"<% if (typeof bodyID !== 'undefined') { %> id="<%= bodyID %>"<% } %>>
<div class="nycg-main nycg-top">
    <header><h2 id="nycg-logo">NYCG, A website for New York City Arts.</h2></header>
    <nav>
        <a href="/">Home</a>
        <a href="/events">Events</a>
        <a href="/artists">Artists</a>
        <a href="/venues">Venues</a>
        <a href="/contact">Contact</a>
        <% if (typeof isLoggedIn === 'undefined' || !isLoggedIn) { %>
        <a href="/login-register">Login/Register</a>
        <% } %>
    </nav>
    <div id="nycg-search">
        <a href="#" class="nycg-ss-search"><i class="ss-icon">search</i></a>
        <input type="text" value="">
    </div>
    <% if (typeof isLoggedIn !== 'undefined') { %>
        <% if (isLoggedIn && user.accountType != "") { %>
    <nav id="nycg-admin-bar">
        <a href="/admin">My Profile</a>
        <a href="/<%= user.accountType %>-detail-edit">Edit Account Details</a>
        <a href="/logout">Log Out</a>
    </nav>
        <% } %>
    <% } %>
</div>